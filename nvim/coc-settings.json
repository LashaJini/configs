{
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": ["markdown"],
  "coc.preferences.jumpCommand": "tabe",
  "eslint.run": "onSave",
  "eslint.autoFixOnSave": true,
  "rust-analyzer.server.path": "~/.local/bin/rust-analyzer",
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-8.6.5",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ]
    }
  }
}
